<%- include("../partials/header")%>



<div class="container">
	<header class="jumbotron">
		<div class="contianer">
			<h1><span class="glyphicon glyphicon-tent"></span>WELCOME TO CAMPGROUNDS!</h1>
			<p>
				<a class="btn btn-primary btn-large" href="/camp/new">ADD NEW CAMP</a>
			</p>
		</div>
	</header>	
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% camp.forEach(function(camps){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail" style="width:100%;">
				    <img src="<%= camps.image %>" style="width:100%; height:75%">
					<h4> <%= camps.name %> </h4>
					<a href="/camp/<%=camps._id%>" class="btn btn-primary">More Info</a>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("../partials/footer")%>